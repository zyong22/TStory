{{>/layout/main-header}}

<div class="container">

    <div class="my_main_list" style="display: flex; flex-wrap: wrap; justify-content: space-around">

        {{#mainPageList}}
            <!-- 아이템 시작 -->
            <div class="my_main_item" style="width: 20%; box-sizing: border-box; padding: 10px;">
                <a href="/post/open/{{id}}" class="my_atag_none">
                    <div class="my_main_item_thumnail">
                        <img src="/images/dog.jpg" width="100%" height="100%">
                    </div>
                    <div class="my_main_content my_p_sm_1">
                        <div class="my_main_item_title">
                            <h3>{{title}}</h3>
                        </div>
                        <div class="my_main_item_summary my_mb_sm_1 my_text_two_line">
                            {{content}}
                        </div>
                        <div class="my_main_item_date my_mb_sm_1">
                            {{getFormattedDate}}
                        </div>
                    </div>
                </a>
                <a href="/user/1/post" class="my_atag_none">
                    <div class="my_main_item_username">
                        <span>by </span>
                        <b>{{userName}}</b>
                    </div>
                </a>
            </div>
            <!-- 아이템 끝 -->
        {{/mainPageList}}

    </div>

</div>

{{>/layout/footer}}
